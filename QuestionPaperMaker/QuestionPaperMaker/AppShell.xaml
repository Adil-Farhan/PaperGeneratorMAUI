<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="QuestionPaperMaker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:QuestionPaperMaker.Views"
    Title="Question Paper Maker">

    <TabBar>
        <ShellContent
            Title="Question Papers"
            ContentTemplate="{DataTemplate views:QuestionPapersPage}"
            Route="QuestionPapers" />
            
        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate views:SettingsPage}"
            Route="Settings" />
    </TabBar>
</Shell> 